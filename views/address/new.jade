extends ../layout

body
	block body
		nav.navbar.navbar-inverse
			.container-fluid
				.navbar-header
					a(class="navbar-brand", href="/").
						Address Book
				.nav.navbar-nav(style="float:right;margin-right:20px;padding-top:5px;")
					a(href="/logout").btn.btn-warning.
						logout
		.container
			.col-md-6.col-md-offset-3
				h2.center-block Add Contact
				form(role="form", action="/address/create", method="post")#contact-form
						.form-group
							label Name
							input(type="text", name="name", placeholder="John Smith").form-control
						.form-group
							label Email
							input(type="text", name="email", placeholder="jsmith@gmail.com").form-control
						.form-group
							label Address
							input(type="text", name="address", placeholder="123 Yonge St").form-control
						.form-group
							label City
							input(type="text", name="city", placeholder="Toronto ON").form-control
						.form-group
							button(type="submit", class="btn btn-primary center-block").
								Add
		script(src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js")
		script.
			//form validation rules
			$("#contact-form").validate({
				rules: {
					name: "required",
					email: {
						required: true,
						email: true
					},
					address: "required",
					city: "required"
				},
				messages: {
					name: "Please enter a name",
					email: "Please enter a valid email address",
					address: "Please enter an address",
					city: "Please enter a city"
				},
				submitHandler: function(form) {
				form.submit();
				}
			});